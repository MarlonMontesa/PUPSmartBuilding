<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/logo.png">
    <title>Login | PUPPQ Smart BMS</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="~/maincss/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/style.css" rel="stylesheet" type="text/css">
    <link href="~/img/favicon.png" rel="shortcut icon" type="image/x-icon">
    <link href="~/maincss/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/animate.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/font.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/li-scroller.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/slick.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/jquery.fancybox.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/theme.css" rel="stylesheet" type="text/css">
    <link href="~/maincss/style.css" rel="stylesheet" type="text/css">
    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page">
            <div class="container">
                <h6 class="account-title">Smart Building Management System</h6>
                <div class="account-box">
                    <div class="account-wrapper">
                        <div style="text-align: center;">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/logo_pup.jpg" width="170" height="100" alt="Home"></a>
                        </div><br>
                        <form action="index.html" name="login">
                            <div class="form-group form-focus">
                                <label class="control-label">Username or Email</label>
                                <input class="form-control floating" type="text" name="userid">
                            </div>
                            <div class="form-group form-focus">
                                <label class="control-label">Password</label>
                                <input class="form-control floating" type="password" name="pswrd">
                            </div>
                            <div class="form-group text-center">
                                <input class="btn btn-primary btn-block account-btn" type="button" onclick="check(this.form)" value="Login">
                            </div>
                            <div class="text-center">
                                <a asp-controller="Home" asp-action="Main">Forgot your password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff="#sidebar"></div>
    <script type="text/javascript" src="~/mainjs/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/mainjs/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/mainjs/app.js"></script>
    <script language="javascript">
			function check(form)/*function to check userid & password*/
			{
			/*the following code checkes whether the entered userid and password are matching*/
			if(form.userid.value == "admin" && form.pswrd.value == "mypswrd")
				{
					window.location.replace('')/*opens the target page while Id & password matches*/
				}
			else if(form.userid.value == "user" && form.pswrd.value == "mypswrd")
				{
					window.location.replace('user-profile.html')/*opens the target page while Id & password matches*/
				}
			else
				{
				alert("Invalid Password or Username")/*displays error message*/
				}
			}
    </script>
</body>
</html>